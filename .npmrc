auto-install-peers = true
strict-peer-dependencies = false
shamefully-hoist = true
prefer-workspace-root = false

# Performance
fetch-timeout = 60000
fetch-retry-mintimeout = 10000
fetch-retry-maxtimeout = 60000

# Monorepo
link-workspace-packages = true
hoist-pattern = ['*eslint*', '*prettier*', '*typescript*']

# Module resolution
public-hoist-pattern = ['*eslint*', '*prettier*', '*typescript*', 'react', 'react-dom']
