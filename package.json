{
  "name": "mern-turbo-boilerplate",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "build:frontend": "turbo build --filter=frontend",
    "build:server": "turbo build --filter=server",
    "start": "turbo start",
    "start:frontend": "turbo start --filter=frontend",
    "start:server": "turbo start --filter=server",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prettier": "prettier --write --ignore-unknown .",
    "upgrade:all": "pnpm up --recursive --latest"
  },
  "keywords": [
    "MERN",
    "Boilerplate",
    "Turbo repo",
    "Mono repo",
    "React.js",
    "Mongodb",
    "Express.js",
    "Node.js"
  ],
  "author": "Md Muhaiminul",
  "devDependencies": {
    "@repo/eslint-config": "^0.0.0",
    "@repo/typescript-config": "^0.0.0",
    "dotenv-cli": "^11.0.0",
    "prettier": "^3.8.1",
    "turbo": "^2.8.10"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
