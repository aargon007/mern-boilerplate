{
  "name": "mern-turbo-boilerplate",
  "private": true,
  "scripts": {
    "dev": "dotenv -- turbo dev",
    "build": "dotenv turbo -- build",
    "start": "dotenv -- turbo start",
    "live": "dotenv -- turbo start --filter=server",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prettier": "prettier --write --ignore-unknown ."
  },
  "keywords": [
    "MERN",
    "Boilerplate",
    "Turbo repo",
    "Mono repo",
    "React.js",
    "Mongodb",
    "Express.js",
    "Node.js"
  ],
  "author": "Md Muhaiminul",
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "dotenv-cli": "^8.0.0",
    "prettier": "^3.4.2",
    "turbo": "^2.4.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
